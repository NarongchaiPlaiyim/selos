        <file>/usr/IBM/WebSphere/AppServer/profiles/SLOSDEV/logs/server1/slos.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>/usr/IBM/WebSphere/AppServer/profiles/SLOSDEV/logs/server1/slos.%d{yyyy-MM-dd}.log</FileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date %-5level [%thread] %logger [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

